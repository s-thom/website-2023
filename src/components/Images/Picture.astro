---
import { getImageInfo, type ImageSourceData } from "./image";

export interface Props {
  image: ImageSourceData;
  alt: string;
  class?: string;
  widths?: number[];
  sizes?: string;
  loading?: "eager" | "lazy";
}

const {
  image,
  alt,
  class: className,
  widths,
  sizes = "100vw",
  loading,
  ...rest
} = Astro.props;

const imageInfo = await getImageInfo(image, widths ?? []);
const formats = imageInfo.formats.slice();
const finalFormat = formats.at(-1)!.sizes[0];
---

<picture {...rest}>
  {
    formats.map((format) => {
      const srcset = format.sizes
        .map((size) => `${size.path} ${size.width}w`)
        .join(", ");

      return <source srcset={srcset} sizes={sizes} type={format.type} />;
    })
  }
  <img class={className} src={finalFormat.path} alt={alt} loading={loading} />
</picture>
