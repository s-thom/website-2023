---
import Picture, { type ImageRequiredProps } from "./Picture.astro";
import { fetchImage } from "./fetchImage";

export interface Props extends ImageRequiredProps {
  id: string;
  src: string;
}

const { id, src, class: className, ...rest } = Astro.props;

const getImage = () => fetchImage(src);
---

<Picture id={id} getImage={getImage} class={className} {...rest} />
