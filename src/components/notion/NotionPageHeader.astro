---
import type {
  DatabaseObjectResponse,
  PageObjectResponse,
} from "@notionhq/client/build/src/api-endpoints";
import { getPageTitleComponents } from "../../lib/notion/titles";
import NotionIcon from "./common/NotionIcon.astro";
import RichText from "./common/RichText.astro";
import { getPagePropertyByName } from "../../lib/notion/util";

export interface Props {
  page: DatabaseObjectResponse | PageObjectResponse;
}

const { page } = Astro.props;

const titleComponents = getPageTitleComponents(page);

const coverSource = getPagePropertyByName(page, "Cover Source", "rich_text");
---

<div class="page-header">
  <h1 class="page-title">
    <RichText components={titleComponents} />
  </h1>
  {
    page.icon && (
      <NotionIcon id={`${page.id}-icon`} icon={page.icon} class="page-icon" />
    )
  }
  {
    coverSource && (
      <p class="info">
        Cover image source: <RichText components={coverSource.rich_text} />
      </p>
    )
  }
</div>

<style>
  .page-header {
    position: relative;
    color: var(--color-text);
    padding: var(--spacing) 0;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: var(--spacing);
    text-align: center;
  }

  @media (min-width: 1500px) {
    .page-header {
      color: var(--color-text-header);
    }

    .page-title {
      text-shadow: 0px 0px 3px rgba(0 0 0 / 0.4);
    }
  }

  .page-header :global(.page-icon) {
    position: absolute;
    bottom: 100%;

    background-color: var(--color-background);
    box-shadow: 0px 2px 4px 3px rgba(0 0 0 / 0.1);
    width: calc(var(--spacing) * 4);
    height: calc(var(--spacing) * 4);
    margin: auto;
    border-radius: 50%;
  }

  @media (min-width: 900px) {
    .page-header :global(.page-icon) {
      width: calc(var(--spacing) * 6);
      height: calc(var(--spacing) * 6);
    }
  }

  @media (min-width: 1200px) {
    .page-header :global(.page-icon) {
      width: calc(var(--spacing) * 8);
      height: calc(var(--spacing) * 8);
    }
  }

  @media (min-width: 1500px) {
    .page-header :global(.page-icon) {
      position: relative;
      bottom: initial;
    }
  }

  .info {
    align-self: start;
    font-weight: 300;
    color: var(--color-text-secondary);
  }
</style>
