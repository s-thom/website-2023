---
import type { CalloutBlockObjectResponse } from "@notionhq/client/build/src/api-endpoints";
import RichText from "../common/RichText.astro";
import Icon from "../common/NotionIcon.astro";

export interface Props {
  block: CalloutBlockObjectResponse;
}

const { block } = Astro.props;
---

<div class={`block-callout block-callout-${block.callout.color}`}>
  <div>
    {
      block.callout.icon && (
        <Icon id={`${block.id}_icon`} icon={block.callout.icon} />
      )
    }
  </div>
  <div>
    <RichText components={block.callout.rich_text} />
  </div>
</div>
