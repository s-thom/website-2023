---
import type { ColumnListBlockObjectResponse } from "@notionhq/client/build/src/api-endpoints";
import { getBlockChildren } from "../../../lib/notion";
import NotionRenderer from "./NotionRenderer.astro";

export interface Props {
  block: ColumnListBlockObjectResponse;
}

const { block } = Astro.props;

const children = block.has_children ? await getBlockChildren(block.id) : [];
---

<div class="column-list">
  {children.length > 0 ? <NotionRenderer blocks={children} /> : undefined}
</div>

<style>
  .column-list {
    display: flex;
    gap: 1em;
  }

  .column-list > :global(*) {
    flex: 1 1 0;
    width: 0;
  }
</style>
