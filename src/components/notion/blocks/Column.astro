---
import type { ColumnBlockObjectResponse } from "@notionhq/client/build/src/api-endpoints";
import { getBlockChildren } from "../../../lib/notion";
import NotionRenderer from "./NotionRenderer.astro";

export interface Props {
  block: ColumnBlockObjectResponse;
}

const { block } = Astro.props;

const children = block.has_children ? await getBlockChildren(block.id) : [];
---

<div class="flow">
  {children.length > 0 ? <NotionRenderer blocks={children} /> : undefined}
</div>
