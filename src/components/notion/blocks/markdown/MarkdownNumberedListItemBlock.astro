---
import type { NumberedListItemBlockObjectResponse } from "@notionhq/client/build/src/api-endpoints";
import { richTextToMarkdownString } from "../../../../lib/notion/util";
import { indent } from "./indentation";

export interface Props {
  block: NumberedListItemBlockObjectResponse;
  indentDepth: number;
}

const { block, indentDepth } = Astro.props;
---

<Fragment>
  {
    `${indent(indentDepth)}1. ${richTextToMarkdownString(block.numbered_list_item.rich_text)}`
  }
  <slot />
</Fragment>
