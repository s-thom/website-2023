---
import type { BulletedListItemBlockObjectResponse } from "@notionhq/client/build/src/api-endpoints";
import { richTextToMarkdownString } from "../../../../lib/notion/util";
import { indent } from "./indentation";

export interface Props {
  block: BulletedListItemBlockObjectResponse;
  indentDepth: number;
}

const { block, indentDepth } = Astro.props;
---

<Fragment>
  {
    `${indent(indentDepth)}- ${richTextToMarkdownString(block.bulleted_list_item.rich_text)}`
  }
  <slot />
</Fragment>
