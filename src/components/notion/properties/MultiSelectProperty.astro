---
import type { MultiSelectPropertyItemObjectResponse } from "@notionhq/client/build/src/api-endpoints";

export interface Props {
  property: MultiSelectPropertyItemObjectResponse;
}

const { property } = Astro.props;
---

<ul class="tag-list">
  {property.multi_select.map((option) => <li class="tag">{option.name}</li>)}
</ul>

<style>
  .tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-half);
  }

  .tag {
    border: 1.5px solid var(--color-border);
    border-radius: var(--border-radius);
    padding: 0 0.2em;
    text-wrap: nowrap;
  }
</style>
