---
import type { ChildDatabaseBlockObjectResponse } from "@notionhq/client/build/src/api-endpoints";
import { getCollection } from "astro:content";
import type { NotionOverrideableProps } from "../../blocks/types";
import BlogListPageItem from "../../blog/BlogListPageItem.astro";

export interface Props extends NotionOverrideableProps {
  block: ChildDatabaseBlockObjectResponse;
}

const { block } = Astro.props;

const blogEntries = await getCollection(
  "pages",
  (entry) => entry.data.properties.Type?.name === "blog",
);
---

<div data-block={block.id} class="blog-collection">
  {
    blogEntries.map((entry) => (
      <BlogListPageItem
        page={entry.data.page}
        slug={entry.data.slug}
        showTitle
      />
    ))
  }
</div>

<style>
  .blog-collection {
    display: grid;
    gap: var(--spacing);
    --num-tracks: 1;
    grid-template-columns: repeat(var(--num-tracks), 1fr);
  }

  @media (min-width: 900px) {
    .blog-collection {
      --num-tracks: 2;
    }
  }

  /* @media (min-width: 900px) {
    .projects-collection {
      --num-tracks: 3;
    }
  } */
</style>
