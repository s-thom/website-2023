---
import type { DatabaseObjectResponse } from "@notionhq/client/build/src/api-endpoints";
import { getInfoForPage } from "../../../lib/notion/caches";
import { getPageTitleComponents } from "../../../lib/notion/titles";
import NotionBackdrop from "../common/NotionBackdrop.astro";
import NotionIcon from "../common/NotionIcon.astro";
import RichText from "../common/RichText.astro";
import NotionProperty from "../properties/NotionProperty.astro";

export interface Props {
  page: DatabaseObjectResponse;
}

const { page } = Astro.props;

const info = await getInfoForPage(page.id);
const titleComponents = getPageTitleComponents(page);
---

<a href={info.path} class="page-item">
  <div class="backdrop-container">
    <NotionBackdrop page={page} shade />
  </div>
  <div class="info">
    {
      page.icon && (
        <NotionIcon id={`${page.id}-icon`} icon={page.icon} class="icon" />
      )
    }
    <h3 class="title">
      <RichText components={titleComponents} />
    </h3>
    <div class="tags">
      <NotionProperty property={page.properties.Tags} />
    </div>
  </div>
</a>

<style>
  .page-item {
    display: block;
    position: relative;
    min-height: 150px;
    height: 100%;
    overflow: hidden;
    border-radius: var(--border-radius);
    text-decoration: none;
    transition: scale var(--transition-duration) ease-in-out;
  }

  .page-item:hover {
    scale: 1.02;
  }

  .page-item:hover .title {
    text-decoration: underline;
  }

  .backdrop-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    overflow: hidden;
  }

  .info {
    position: relative;
    height: 100%;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    gap: var(--spacing-half);
    padding: var(--spacing);
    color: var(--color-background);
  }

  .info :global(.icon) {
    width: calc(var(--spacing) * 5);
    height: calc(var(--spacing) * 5);
    border-radius: 50%;
    overflow: hidden;
    background-color: var(--color-background);
  }

  .tags {
    justify-self: end;
  }
</style>
