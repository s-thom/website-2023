---
import type { DatabaseObjectResponse } from "@notionhq/client/build/src/api-endpoints";
import DevOnly from "../../DevOnly.astro";
import ExternalImage from "../../Images/ExternalImage.astro";
import type { ImageRequiredProps } from "../../Images/Picture.astro";

export interface Props extends ImageRequiredProps {
  id: string;
  image: NonNullable<DatabaseObjectResponse["cover"]>;
}

const { id, class: className, alt, image, sizes, ...rest } = Astro.props;

const GENERATE_IMAGE_WIDTHS = [3840, 2560, 1920, 1440, 720, 540, 360];

let url: string | undefined;
switch (image.type) {
  case "external":
    url = image.external.url;
    break;
  case "file":
    url = image.file.url;
    break;
  default:
    url = undefined;
}
---

{
  url ? (
    <ExternalImage
      {...rest}
      id={id}
      src={url}
      alt={alt}
      widths={GENERATE_IMAGE_WIDTHS}
      sizes={sizes}
      class={className}
    />
  ) : (
    <DevOnly>
      image {id} has image type {image.type}
    </DevOnly>
  )
}
