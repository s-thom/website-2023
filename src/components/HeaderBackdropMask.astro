---
import {
  SvgMask,
  type MaskType,
  type IconType,
} from "./react/SvgMask/index.tsx";

export interface Props {
  id: string;
  class?: string;
  seed: string;
  maskType: MaskType;
  iconType: IconType;
}

const { id, class: className, seed, maskType, iconType } = Astro.props;
---

<SvgMask
  id={id}
  seed={seed}
  maskType={maskType}
  iconType={iconType}
  width={1920}
  height={250 /* Note: 250px is also present in the --height-header variable in src/css/layout.css */}
  className={className}
>
  <slot />
</SvgMask>
