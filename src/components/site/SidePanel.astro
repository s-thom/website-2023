---
export interface Props {
  label: string;
  id?: string;
  class?: string;
  handleClass?: string;
  contentClass?: string;
}

const { id, class: className, handleClass, contentClass, label } = Astro.props;
---

<div class:list={["side-panel", className]} id={id}>
  <button
    type="button"
    class:list={["handle", handleClass]}
    aria-label={`Toggle ${label}`}
  >
    <slot name="handle">Â«</slot>
  </button>
  <div class:list={["content", contentClass]}>
    <slot />
  </div>
</div>

<style>
  :root {
    --side-panel-spacing: 8px;
  }

  .side-panel {
    width: calc(
      100vw - ((2 * var(--side-panel-spacing)) + (var(--spacing) * 2.5))
    );
    min-width: 250px;
    max-width: 400px;
    border: var(--big-box-border-width) solid var(--big-box-color);
    position: fixed;
    inset-block-start: var(--side-panel-spacing);
    inset-inline-start: 100%;
    transform: translateX(0%);
    transition: transform 0.3s ease-in-out;
    backdrop-filter: brightness(40%) saturate(80%) blur(10px);
    z-index: 2;
    color: var(--color-text-header);
    --big-box-color: var(--color-text-header);

    &.open {
      transform: translateX(calc(-100% - var(--side-panel-spacing)));
    }
  }

  .handle {
    position: absolute;
    inset-inline-start: 0;
    transform: translateX(calc(-100% - var(--big-box-border-width)))
      translateY(calc(var(--big-box-border-width) * -1));
    width: calc(var(--spacing) * 2.5);
    height: calc(var(--spacing) * 2.5);
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    border: var(--big-box-border-width) solid var(--big-box-color);
    border-inline-end: none;
    background-color: transparent;
    backdrop-filter: brightness(40%) saturate(80%) blur(10px);
    color: inherit;
  }
</style>

<script>
  document.querySelectorAll<HTMLDivElement>(".side-panel").forEach((panel) => {
    const button = panel.querySelector<HTMLButtonElement>("button.handle")!;
    button.addEventListener("click", () => {
      panel.classList.toggle("open");
    });
  });
</script>
